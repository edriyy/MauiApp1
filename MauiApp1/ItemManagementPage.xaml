<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ItemManagementPage">
    <StackLayout Padding="5">
        <Label Text="ITEM MANAGEMENT" HorizontalOptions="Center" FontSize="25" FontAttributes="Bold" Margin="0,10,0,50"/>
        <Button Text="Add Item" Clicked="AddItemButton_Clicked"  Margin="0,0,0,10"/>
        <Button Text="Edit Item" Clicked="EditItemButton_Clicked"  Margin="0,0,0,10"/>
        <Button Text="Item Lists" Clicked="ItemListsButton_Clicked"  Margin="0,0,0,10"/>
        <Button Text="Back" Clicked="BackButton_Clicked" Margin="0,0,0,10"/>
    </StackLayout>
</ContentPage>