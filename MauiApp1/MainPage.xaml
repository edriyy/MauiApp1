<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <!-- Grid Row and Column definitions if necessary -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- StackLayout for buttons in the center -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Admin" WidthRequest="150" HeightRequest="150" Margin="15" Clicked="AdminButton_Clicked"/>
            <Button Text="Employee" WidthRequest="150" HeightRequest="150" Margin="15" Clicked="EmployeeButton_Clicked"/>
        </StackLayout>

        <!-- Frame for loading animation, ensured to be the last element so it is on top -->
        <Frame BackgroundColor="#66000000"
            Padding="20"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               CornerRadius="10"
               IsVisible="False"
            x:Name="loadingFrame">
            <ActivityIndicator x:Name="loadingIndicator"
                               IsRunning="False"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
        </Frame>
    </Grid>
</ContentPage>
