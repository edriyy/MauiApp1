<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MauiApp1.CartPage">
    <StackLayout>
        <Label Text="Items in Cart" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10"/>
        <ListView x:Name="CartListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Padding="10">
                            <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding Price, StringFormat='Price: RM {0:F2}'}" HorizontalOptions="End"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Label x:Name="TotalPriceLabel" Text="Total Price: " />
    </StackLayout>
</ContentPage>