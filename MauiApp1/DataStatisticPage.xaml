<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.DataStatisticPage">
    <VerticalStackLayout>
        <Entry x:Name="ItemNameEntry" Placeholder="Enter item name" />
        <Button Text="Get Statistics" Clicked="GetStatisticsClicked" />
        <Label x:Name="ItemNameLabel" FontAttributes="Bold" />
        <VerticalStackLayout x:Name="StatisticsLayout" Spacing="10">
            <Label x:Name="TotalSalesLabel" FontAttributes="Bold" />
            <Label x:Name="AveragePriceLabel" FontAttributes="Bold" />
            <Label x:Name="TotalQuantityLabel" FontAttributes="Bold" />
        </VerticalStackLayout>
        <Button Text="Back" Clicked="BackButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>