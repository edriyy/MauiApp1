<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ChangePasswordPage">
    <StackLayout Padding="5" Spacing="5">
        <Entry Placeholder="Old Password" x:Name="OldPasswordEntry"/>
        <Entry Placeholder="New Password" IsPassword="True" x:Name="NewPasswordEntry"/>
        <Entry Placeholder="Confirm Password" IsPassword="True" x:Name="ConfirmPasswordEntry"/>
        <Button Text="Change Password" Clicked="OnChangePasswordClicked"/>
        <Button Text="Back" Clicked="BackButton_Clicked"/>
    </StackLayout>
</ContentPage>