<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.FoodMenuPage">
    <StackLayout>
        <!-- Add your UI elements for displaying food menu items here -->
        <ListView x:Name="FoodListView" ItemsSource="{Binding FoodItems}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding Price, StringFormat='{0:C}'}" />
                            <Button Text="Add to Cart" Clicked="AddToCartButton_Clicked" CommandParameter="{Binding .}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button x:Name="Button3" Text="Cart" Clicked="ViewCartButton_Clicked"/>
    </StackLayout>
</ContentPage>