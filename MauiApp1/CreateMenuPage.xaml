<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.CreateMenuPage">
    <StackLayout Padding="20">
        <Label Text="Add Food Item" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10" />
        <Entry x:Name="FoodNameEntry" Placeholder="Name" />
        <Entry x:Name="FoodPriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Button Text="Add Food" Clicked="OnAddFoodClicked" />

        <Label Text="Add Drink Item" FontSize="Large" HorizontalOptions="CenterAndExpand" Margin="0,20,0,10" />
        <Entry x:Name="DrinkNameEntry" Placeholder="Name" />
        <Entry x:Name="DrinkPriceEntry" Placeholder="Price" Keyboard="Numeric" />
        <Button Text="Add Drink" Clicked="OnAddDrinkClicked" />

        <Button Text="Back" Clicked="BackButton_Clicked"/>
    </StackLayout>
</ContentPage>